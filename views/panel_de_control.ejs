<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/i_img/logo.jpg" type="image/jpg" sizes="16x16">
    <!-- 
        CSS 
    -->
    <link rel='stylesheet' href='/i_css/root.css' />
    <link rel='stylesheet' href='/i_css/header.css' />
    <link rel='stylesheet' href='/i_css/panel_de_control.css' />
</head>
<body>
<section class="n-grid">
<section class="area_1">
    <%- include('seccion/header'); %>
</section>
<section class="area_2">
    <h2>Entrada de datos</h2>
    <form method="POST" name="ia" id="ia">
        <label for="id" hidden="">
            <input type="text" name="id" id="id" value="0" required="">
        </label>
        <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Ingresar nombre.." required="">
        <label for="correo">Correo</label>
            <input type="email" name="correo" id="correo" placeholder="Ingresar correo..." required="">
        <label for="direccion">Dirección</label>
            <input type="text" name="direccion" id="direccion" placeholder="Ingresar dirección..." required="">
        <input type="submit" name="submit" id="submit" value="Insertar">
    </form>
</section>
<section class="area_3">
    <form method="POST" name="busqueda" id="busqueda">
        <input type="search" name="buscar" id="buscar" placeholder="Nombre, correo y dirección...">
    </form>
    <p id="res"></p>
    <div>
    <table>
        <!--<caption>Salida de datos</caption>-->
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Dirección</th>
                <th colspan="2">Gestionar</th>
            </tr>
        </thead>
        <tbody id="consulta">

        </tbody>
        <tfoot>
            <tr>
                <td colspan="6">
                    <form method="POST" name="por" id="por">
                        <label for="himOrHer">Por</label>
                        <select id="himOrHer" name="himOrHer">
                            <option value="">...</option>
                            <option value="nombre">Nombre</option>
                            <option value="correo">Correo</option>
                            <option value="direccion">Dirección</option>
                        </select>
                    </form>
                    <form method="POST" name="orden" id="orden">
                        <label for="ordenar">Ordenar</label>
                        <select id="ordenar" name="ordenar">
                            <option value="">...</option>
                            <option value="ASC">Acendente</option>
                            <option value="DESC">Decendente</option>
                        </select>
                    </form>
                </td>
            </tr>
             <tr>
                <td colspan="6">
                    <button id="anterior">Anterior</button>
                    <form method="POST" name="paginacion" id="paginacion">
                        <label for="pagina" hidden="">
                            <input type="number" name="pagina" id="pagina" value="" min="0">
                            <input type="number" name="paginas" id="paginas" min="0">
                        </label>
                    </form>
                    <span id="paginaciones"></span>
                    <button id="siguiente">Siguiente</button>
                </td>
            </tr>
         </tfoot>
    </table>
    </div>
</section>
</section>
<script src="l/i/header.js"></script>
<script src="l/l/panel_de_control.js"></script>
</body>
</html>

